#!/bin/bash

report() {
    local exit_status="$?"

    local error_message=""
    local info_message=""

    for arg in "$@"; do
        case "$1" in
            -e|--error)
                error_message="$2"
                shift 2
                ;;
            -i|--info)
                info_message="$2"
                shift 2
                ;;
        esac
    done

    if [ "$exit_status" -ne 0 ]; then
        echo -e "${RED}ERROR${NC}  $error_message" >&2
        exit "$exit_status"
    fi

    if [ -n "$info_message" ]; then
        echo -e "${GREEN}INFO${NC}   $info_message"
    fi
}

get_url_body() {
    local URL="$1"
    
    curl --proto '=https' -sSf "$URL"
    report -e "Failed to get URL body: \"$URL\""
}

eval_url_body() {
    local URL="$1"

    local url_body="$(get_url_body "$URL")"
    eval "$url_body"
    report -e "Failed to evaluate URL body at: \"$URL\""
}

ROOT_URL="https://raw.githubusercontent.com/skeletony007/charon/main"
BASH_UTILS_URL="https://raw.githubusercontent.com/skeletony007/bash-utils/main"

eval_url_body "$ROOT_URL/colors"
eval_url_body "$BASH_UTILS_URL/object/object"


action=$1

case $action in
    install|uninstall|config)
        shift
        for program in "$@"; do
            ferry="$(get_url_body "$ROOT_URL/ferries/$program")"
            create_object $program "$ferry"
            ${$program}_${action}
        done
    ;;
    --help|-h)
        get_url_body "$ROOT_URL/usage"
    ;;
    *)
        echo -e "Invalid command or missing arguments. Use ${YELLOW}charon --help${NC} for usage instructions."
    ;;
esac

