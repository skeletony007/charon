#!/bin/bash

report() {
    local exit_status="$?"
    
    local error_message=""
    local info_message=""

    for arg in "$@"; do
        case "$1" in
            -e|--error)
                error_message="$2"
                shift 2
                ;;
            -i|--info)
                info_message="$2"
                shift 2
                ;;
        esac
    done

    if [ "$exit_status" -ne 0 ]; then
        echo -e "${RED}ERROR${NC}  $error_message" >&2
        return "$exit_status"
    fi

    if [ -n "$info_message" ]; then
        echo -e "${GREEN}INFO${NC}   $info_message"
    fi
}

secure_curl() {
    local URL="$1"
    
    curl --proto '=https' -sSf "$URL"
    report -e "Failed to transfer data from \"$URL\""
}

eval_curl() {
    local URL="$1"

    local data="$(secure_curl "$URL")"
    eval "$data"
    report -e "Failed to evaluate data from \"$URL\""
}

ROOT_URL="https://raw.githubusercontent.com/skeletony007/charon/main"
BASH_UTILS_URL="https://raw.githubusercontent.com/skeletony007/bash-utils/main"

eval_curl "$ROOT_URL/colors"
eval_curl "$BASH_UTILS_URL/object/object"

abstract_program="$(secure_curl "$ROOT_URL/punts/abstract-program")"


action=$1

case $action in
    install|uninstall|config)
        shift
        for program in "$@"; do
            ferry="$(secure_curl "$ROOT_URL/ferries/$program")"

            create_object $program "$abstract_program"
            create_object $program "$ferry"

            ${program}_${action}
            report -e "$action failed" -i "$action succeeded"
        done
    ;;
    --help|-h)
        secure_curl "$ROOT_URL/usage"
    ;;
    *)
        echo -e "Invalid command or missing arguments. Use ${YELLOW}charon --help${NC} for usage instructions."
    ;;
esac

